{
  "compilerOptions": {
    "lib": ["es6", "es2017"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
